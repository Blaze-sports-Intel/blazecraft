{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "scripts",
    "outDir": "scripts/dist",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["scripts/dist"]
}
